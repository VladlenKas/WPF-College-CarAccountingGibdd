<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Основные цвета -->
    <Color x:Key="Primary.Static.Color">#778BEA</Color>
    <Color x:Key="Primary.Hover.Color">#8FA1FF</Color>
    <Color x:Key="Primary.Pressed.Color">#5A6EC7</Color>

    <!-- Фоновые цвета -->
    <Color x:Key="Background.Window.Color">#EFF2F9</Color>
    <Color x:Key="Background.Control.Color">#FFFFFF</Color>
    <Color x:Key="Background.Disabled.Color">#E0E4F0</Color>

    <!-- Границы -->
    <Color x:Key="Border.Static.Color">#CCCCCC</Color>
    <Color x:Key="Border.Hover.Color">#30778BEA</Color> <!-- 30% прозрачности -->
    <Color x:Key="Border.Focused.Color">#778BEA</Color>
    <Color x:Key="Card.Border.Static.Color">#E5E5E5</Color>

    <!-- Текст -->
    <Color x:Key="Text.Static.Color">#8F8F8F</Color>
    <Color x:Key="Text.Primary.Color">#000000</Color>
    <Color x:Key="Text.Secondary.Color">#333333</Color>
    <Color x:Key="Text.Inverted.Color">#FFFFFF</Color>

    <!-- Кнопки -->
    <Color x:Key="Button.Background.Static.Color">#E0E4F0</Color>
    <Color x:Key="Button.Background.Hover.Color">#D0D4E0</Color>
    <Color x:Key="Button.Background.Pressed.Color">#C0C4D0</Color>

    <!-- Общие цвета обводок -->
    <Color x:Key="Button.Border.Static.Color">#B0B0B0</Color>
    <Color x:Key="Button.Border.Hover.Color">#909090</Color>
    <Color x:Key="Button.Border.Pressed.Color">#707070</Color>

    <!-- Обводки для важных кнопок -->
    <Color x:Key="Button.Primary.Border.Static.Color">#5A6EC7</Color>
    <Color x:Key="Button.Primary.Border.Hover.Color">#4A5EB7</Color>
    <Color x:Key="Button.Primary.Border.Pressed.Color">#3A4EA7</Color>
    
    <!-- Тени -->
    <Color x:Key="Shadow.Base.Color">#05000000</Color>
</ResourceDictionary>