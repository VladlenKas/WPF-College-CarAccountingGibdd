<Window x:Class="CarAccountingGibdd.Dialogs.MessageLoadingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarAccountingGibdd.Dialogs"
        mc:Ignorable="d"
        WindowStyle="None"
        MaxHeight="300" MaxWidth="500"
        MinHeight="300" MinWidth="500"
        WindowStartupLocation="CenterScreen"
        
        xmlns:gif="http://wpfanimatedgif.codeplex.com">

    <DockPanel Margin="35">

        <DockPanel VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   DockPanel.Dock="Top">

            <!-- Гиф -->
            <Image gif:ImageBehavior.AnimatedSource="pack://application:,,,/CarAccountingGibdd;component/Resources/GifLoadCat.gif"
                   DockPanel.Dock="Top"
                   Width="150"
                   Name="loadGif"
                   Margin="0 0 0 12"/>

            <!-- Текст -->
            <TextBlock Name="StatusLoadTB"
                       DockPanel.Dock="Top"
                       Style="{StaticResource TextBlock.H6}">
                <Run Name="infoTB" Text="Формируем оплату..."/>
                <Run Name="timerTB" Text="{Binding SecondsLeft, Mode=OneWay, StringFormat={}Осталось {0} сек.}"/>
            </TextBlock>

            <!-- Кнопка -->
            <Button Style="{StaticResource Button.Primary}"
                    VerticalAlignment="Bottom"
                    Content="Закрыть"
                    Width="200"
                    Margin="0 24 0 0"
                    Visibility="Collapsed"
                    Name="exitBTN"
                    Click="Exit_Click"/>

        </DockPanel>
    </DockPanel>
</Window>
