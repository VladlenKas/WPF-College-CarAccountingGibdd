<UserControl x:Class="CarAccountingGibdd.Controls.ImageMiniatureCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarAccountingGibdd.Controls"
             mc:Ignorable="d" >

    <Border Width="115" Height="100" 
            Margin="0 0 5 5">
        
        <Grid>
            <Image Name="imageVehicle" 
                   Stretch="UniformToFill"
                   Cursor="Hand"
                   MouseLeftButtonUp="ImageVehicle_MouseLeftButtonUp"/>

            <Button Style="{StaticResource Button.Icon.Small}"
                    Tag="DeleteOutline"
                    Opacity="0.5"
                    Width="32" Height="32"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Margin="0 5 5 0"
                    Name="deleteBTN"
                    Click="Delete_Click"/>
        </Grid>
    </Border>
</UserControl>
