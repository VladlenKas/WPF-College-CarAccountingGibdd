<UserControl x:Class="CarAccountingGibdd.Controls.SelectedViolationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarAccountingGibdd.Controls"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto">

    <Grid>
        <DockPanel Margin="0 0 0 8"
                   VerticalAlignment="Center"
                   LastChildFill="False">

            <TextBlock Text="{Binding NumberDescription}"
                       TextWrapping="Wrap"
                       Style="{StaticResource TextBlock.Normal}"
                       DockPanel.Dock="Left"/>

            <Button Style="{StaticResource Button.Icon.Small}"
                    Tag="deleteOutline"
                    Click="Delete_Click"
                    DockPanel.Dock="Right"/>
        </DockPanel>
    </Grid>
</UserControl>
